@import 'typographic'

$body-font = $helvetica
$heading-font = $body-font
typographic()

body
    margin 0

container()
    margin 0 auto
    max-width 1500px
    width 100vw

.container
    container()

    height 300vh

    h1
        margin-top 0

bg-height = 60vh
bg-width = (bg-height * 4.7)
steps = 7
avatar-width = (bg-width / steps)

.avatar-overlay
    container()

    position fixed
    top 0
    right 0
    left 0
    width 100vw
    height 100vh

.avatar-container
    width 'calc(100% - %s)' % avatar-width
    height 100%

.avatar
    position absolute
    bottom 0
    width avatar-width
    height bg-height
    background url('../assets/wave.png') no-repeat
    background-size bg-width bg-height

.animate
    animation play 0.8s steps(steps) infinite alternate

@keyframes play
    from
        background-position 0

    to
        background-position -(bg-width)
