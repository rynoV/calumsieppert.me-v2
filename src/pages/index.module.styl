body
    margin 0

.home-page
    homePageContainer()

.hero
    display grid
    height 100vh
    grid-template 1fr 1fr / 1fr 1fr

.hero__content
    align-self center
    justify-self start
    grid-area 1 / 1 / 1 / 3

    h1
        margin-top 0

.hero__scroll-link
    display flex
    flex-direction column
    align-self end
    align-items center
    margin 0
    color unset
    text-decoration none
    font unset
    justify-self start
    grid-area 2 / 1 / 3 / 2

    p
        margin-bottom vr-block(0.25)

    svg
        margin-bottom vr-block(0.25)
        animation scrollArrow 3s infinite

        @keyframes scrollArrow
            0%
                transform translate(0, 0)

            20%
                transform translateY(10px)

            40%
                transform translate(0, 0)

.project
    display grid
    height 100vh
    grid-template 1fr 3fr / 1fr 1fr

    img
        align-self center
        //max-width 60vw
        height 100%
        justify-self end
        grid-area 2 / 2 / 3 / 3

.project__description
    align-self center
    margin 0 vr-block(0.25)
    text-align center
    justify-self center
    grid-area 1 / 1 / 1 / 3

    a
        color $heading-color
        font-weight 600
        font-size vr-block(0.75)
